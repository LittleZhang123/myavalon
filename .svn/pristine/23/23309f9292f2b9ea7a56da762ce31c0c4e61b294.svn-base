<!DOCTYPE html>
<html>
    <head>
        <title>ms-duplex</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <script src="avalon.mobile.js" type="text/javascript"></script>
        <style>
            .gridheader,
            .gridtbody {
                width: 100%;
                height: 24px;
                background: #DCDCDC;
                margin:0px;
                color:#000;
            }

            .gridwrapper {
                width: 100%;
                height: 300px;
                overflow: auto;
                margin:0px;
            }

            .gridtbody {
                width: 100%;
                border-collapse: collapse;
            }

            .gridtbody td,
            .gridtbody th {
                background: #fff;
                border-top: 1px solid #b6b6b6;

            }

            .grid th {
                width: 60px;
            }

            .grid td:nth-child(2) {
                width: 10%;
            }

            .grid td:nth-child(3) {
                width: 18%;
            }

            .hover td,
            .hover th {
                background: #9fe3ee;
            }

            .highlight td,
            .highlight th {
                background: #40C7DD!important;
            }
            .light{
                background:red;
            }
            .grid td:nth-child(4) {
                width: 18%;
            }
        </style>
        <script>
            var model = avalon.define("model", function(vm) {
                vm.txt = {
                    code: "AAA"
                };
                vm.eee = '另一个数据'
            });
            window.onload = function() {
                var el = document.getElementById("id")
                console.log(el.childNodes.length)
            }
            var cell = {name: "电脑001",
                mainboard: "华硕P5K3 Deluxe/WiFi-AP",
                cpu: " Intel酷睿2四核 Q6600(盒)",
                memory: "宇瞻1GB DDR3 1333",
                harddisk: "希捷320GB 7200.10 16M(串口/3年盒)",
                checked: false
            }
            var grids = avalon.range(1, 100).map(function(el, i) {
                return avalon.mix({}, cell, {name: "电脑0" + i})
            })
            grids[1].checked = grids[4].checked = true
            avalon.define("test", function(vm) {
                vm.radio = true
                vm.datagrid = grids
                vm.checkall = false
                vm.$watch("checkall", function(a) {
                    vm.datagrid.forEach(function(el) {
                        el.checked = a
                    })
                })
            })


        </script> 
    </head>
    <body >
        <div ms-controller="model" id="id">
            {{ txt.code | lowercase }}你好{{eee}}
        </div> 

        <div ms-controller="test">
            <div ms-class-light="radio" >
                <input type="checkbox" ms-duplex-radio="radio">
            </div>
           <table class="gridheader grid">
                <tbody><tr>
                        <th><input type="checkbox" ms-duplex-radio="checkall"></th>
                        <td>名称</td>
                        <td>主板</td>
                        <td>CPU</td>
                        <td>内存</td>
                        <td>硬盘</td>
                    </tr>
                </tbody></table>
            <div class="gridwrapper">
               <table class="gridtbody grid" ms-each-el="datagrid" >
                    <tr ms-hover="hover" ms-class-highlight="el.checked" >
                        <th><input type="checkbox" ms-duplex-radio="el.checked" ></th>
                        <td>{{el.name}}</td>
                        <td>{{el.mainboard}}</td>
                        <td>{{el.cpu}}</td>
                        <td>{{el.memory}}</td>
                        <td>{{el.harddisk}}</td>
                    </tr>
                </table>
            </div>
        </div>

    </body>
</html>